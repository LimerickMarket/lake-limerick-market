<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h2 class="mb-0">Contact Us</h2>
        </div>
        <div class="card-body">
          <p class="lead mb-4">
            Have questions about our menu, events, or services? We'd love to hear from you!
          </p>

          <div class="row mb-4">
            <div class="col-md-6">
              <h5 class="text-primary">Location</h5>
              <p class="mb-0">
                <i class="bi bi-geo-alt-fill"></i> Lake Limerick Country Golf Course<br>
                Shelton, WA
              </p>
            </div>
            <div class="col-md-6">
              <h5 class="text-primary">Hours</h5>
              <p class="mb-0">
                <i class="bi bi-clock-fill"></i> Monday - Sunday<br>
                8:00 AM - 8:00 PM
              </p>
            </div>
          </div>

          <hr class="my-4">

          <%= form_with(model: @contact, local: true, class: "needs-validation", novalidate: true) do |form| %>
            <% if @contact.errors.any? %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Please fix the following errors:</strong>
                <ul class="mb-0 mt-2">
                  <% @contact.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :name, class: "form-label" %>
              <%= form.text_field :name, class: "form-control #{@contact.errors[:name].any? ? 'is-invalid' : ''}", 
                                  placeholder: "Your full name", required: true %>
              <div class="invalid-feedback">
                Please provide your name.
              </div>
            </div>

            <div class="mb-3">
              <%= form.label :email, class: "form-label" %>
              <%= form.email_field :email, class: "form-control #{@contact.errors[:email].any? ? 'is-invalid' : ''}", 
                                   placeholder: "your.email@example.com", required: true %>
              <div class="invalid-feedback">
                Please provide a valid email address.
              </div>
            </div>

            <div class="mb-3">
              <%= form.label :phone, "Phone (optional)", class: "form-label" %>
              <%= form.telephone_field :phone, class: "form-control #{@contact.errors[:phone].any? ? 'is-invalid' : ''}", 
                                       placeholder: "(555) 123-4567" %>
              <div class="invalid-feedback">
                Please provide a valid phone number.
              </div>
            </div>

            <div class="mb-4">
              <%= form.label :message, class: "form-label" %>
              <%= form.text_area :message, rows: 6, 
                                 class: "form-control #{@contact.errors[:message].any? ? 'is-invalid' : ''}", 
                                 placeholder: "Tell us what's on your mind... (minimum 10 characters)", 
                                 required: true %>
              <div class="invalid-feedback">
                Please provide a message (at least 10 characters).
              </div>
              <div class="form-text">
                <%= @contact.message&.length || 0 %> / 1000 characters
              </div>
            </div>

            <div class="d-flex gap-2">
              <%= form.submit "Send Message", class: "btn btn-primary btn-lg" %>
              <%= link_to "Cancel", root_path, class: "btn btn-outline-secondary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="mt-4 text-center text-muted">
        <p class="mb-0">
          <i class="bi bi-shield-check"></i> Your information is secure and will never be shared.
        </p>
      </div>
    </div>
  </div>
</div>
