<div class="container mt-4">
  <div class="market-section">
    <h2>ğŸ’° Current Promotions & Deals</h2>
    
    <div class="row">
      <% if @promos.any? %>
        <% @promos.each do |promo| %>
          <div class="col-lg-6 mb-4">
            <div class="card h-100 border-warning">
              <% if promo.image.attached? %>
                <%= image_tag promo.image, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
              <% else %>
                <div class="card-img-top bg-warning bg-opacity-10 d-flex align-items-center justify-content-center" style="height: 200px;">
                  <span class="text-warning fs-1">ğŸ’°</span>
                </div>
              <% end %>
              
              <div class="card-body d-flex flex-column">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <h5 class="card-title"><%= promo.title %></h5>
                  <span class="badge bg-warning text-dark">Active</span>
                </div>
                
                <p class="text-muted small mb-3">
                  ğŸ“… Valid until <%= promo.end_date.strftime("%B %d, %Y") %>
                  <% if promo.discount_percentage %>
                    â€¢ <span class="text-success fw-bold"><%= promo.discount_percentage %>% OFF</span>
                  <% end %>
                </p>
                
                <p class="card-text flex-grow-1"><%= simple_format(promo.description) %></p>
                
                <div class="mt-auto">
                  <%= link_to "View Details", promo_path(promo), class: "btn btn-warning" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col-12">
          <div class="alert alert-info text-center">
            <h4>ğŸ’ No Active Promotions</h4>
            <p>We're working on some great deals! Subscribe to our newsletter to be the first to know about new promotions.</p>
            <%= link_to "Subscribe to Newsletter", new_subscription_path, class: "btn btn-success me-2" %>
            <%= link_to "View Menu Items", menu_items_path, class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
    
    <!-- Pagination -->
    <% if @promos.respond_to?(:current_page) %>
      <div class="d-flex justify-content-center mt-4">
        <%= paginate @promos %>
      </div>
    <% end %>
  </div>
</div>
