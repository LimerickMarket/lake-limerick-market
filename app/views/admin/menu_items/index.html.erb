<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>üçΩÔ∏è Manage Menu Items</h1>
    <%= link_to "Add New Menu Item", new_admin_menu_item_path, class: "btn btn-primary" %>
  </div>

  <% if @menu_items.any? %>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Available</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @menu_items.each do |menu_item| %>
            <tr>
              <td>
                <% if menu_item.image_url.present? %>
                  <%= image_tag menu_item.image_url, style: "width: 50px; height: 50px; object-fit: cover; border-radius: 4px;" %>
                <% elsif menu_item.image.attached? %>
                  <%= image_tag menu_item.image, style: "width: 50px; height: 50px; object-fit: cover; border-radius: 4px;" %>
                <% else %>
                  <span class="text-muted">No image</span>
                <% end %>
              </td>
              <td><strong><%= menu_item.name %></strong></td>
              <td><span class="badge bg-secondary"><%= menu_item.category %></span></td>
              <td class="text-success"><strong>$<%= menu_item.price %></strong></td>
              <td>
                <% if menu_item.available? %>
                  <span class="badge bg-success">Available</span>
                <% else %>
                  <span class="badge bg-danger">Unavailable</span>
                <% end %>
              </td>
              <td style="min-width: 140px;">
                <div class="d-flex gap-2">
                  <%= link_to "Edit", edit_admin_menu_item_path(menu_item), class: "btn btn-sm btn-warning" %>
                  <%= button_to "Delete", admin_menu_item_path(menu_item), method: :delete, 
                      data: { confirm: "Are you sure you want to delete this menu item?" }, 
                      class: "btn btn-sm btn-danger" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-info">
      <h4>No Menu Items Yet</h4>
      <p>Get started by adding your first menu item!</p>
      <%= link_to "Add Menu Item", new_admin_menu_item_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
