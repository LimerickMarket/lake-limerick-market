<%= form_with(model: [:admin, menu_item], local: true, class: "needs-validation") do |f| %>
  <% if menu_item.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(menu_item.errors.count, "error") %> prohibited this menu item from being saved:</h4>
      <ul>
        <% menu_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control", placeholder: "e.g., Golfer's Breakfast Burrito", required: true %>
        </div>

        <div class="col-md-3 mb-3">
          <%= f.label :price, class: "form-label" %>
          <div class="input-group">
            <span class="input-group-text">$</span>
            <%= f.number_field :price, class: "form-control", step: 0.01, min: 0, placeholder: "9.99", required: true %>
          </div>
        </div>

        <div class="col-md-3 mb-3">
          <%= f.label :category, class: "form-label" %>
          <%= f.select :category, 
              ["Breakfast", "Burgers & Sandwiches", "Comfort Food", "Desserts", "Beverages"], 
              { prompt: "Select category" },
              { class: "form-select", required: true } %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, class: "form-control", rows: 4, 
            placeholder: "Describe your menu item in detail...", required: true %>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :image, "Upload Image", class: "form-label" %>
          <%= f.file_field :image, class: "form-control", accept: "image/*" %>
          <small class="form-text text-muted">Upload a photo of your menu item (JPG, PNG, SVG)</small>
          
          <% if menu_item.image.attached? %>
            <div class="mt-2">
              <p class="text-success">âœ“ Current image: <%= menu_item.image.filename %></p>
              <%= image_tag menu_item.image, style: "max-width: 200px; border-radius: 8px;" %>
            </div>
          <% end %>
        </div>

        <div class="col-md-6 mb-3">
          <%= f.label :image_url, "Or use Image URL", class: "form-label" %>
          <%= f.text_field :image_url, class: "form-control", 
              placeholder: "/burger.svg or https://example.com/image.jpg" %>
          <small class="form-text text-muted">Use a URL for SVG placeholders or external images</small>
          
          <% if menu_item.image_url.present? %>
            <div class="mt-2">
              <p class="text-info">Current URL: <%= menu_item.image_url %></p>
              <%= image_tag menu_item.image_url, style: "max-width: 200px; border-radius: 8px;" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="mb-3">
        <div class="form-check form-switch">
          <%= f.check_box :available, class: "form-check-input", id: "available-switch" %>
          <%= f.label :available, "Available for purchase", class: "form-check-label", for: "available-switch" %>
        </div>
      </div>

      <div class="d-flex gap-2">
        <%= f.submit menu_item.new_record? ? "Create Menu Item" : "Update Menu Item", 
            class: "btn btn-primary" %>
        <%= link_to "Cancel", admin_menu_items_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
<% end %>
