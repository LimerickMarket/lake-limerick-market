<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>ðŸŽª Manage Events</h1>
    <%= link_to "Add New Event", new_admin_event_path, class: "btn btn-primary" %>
  </div>

  <% if @events.any? %>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>Title</th>
            <th>Date & Time</th>
            <th>Location</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><strong><%= event.title %></strong></td>
              <td><%= event.event_date.strftime("%B %d, %Y at %I:%M %p") %></td>
              <td><%= event.location %></td>
              <td>
                <% if event.event_date > Time.current %>
                  <span class="badge bg-success">Upcoming</span>
                <% else %>
                  <span class="badge bg-secondary">Past</span>
                <% end %>
              </td>
              <td style="min-width: 140px;">
                <div class="d-flex gap-2">
                  <%= link_to "Edit", edit_admin_event_path(event), class: "btn btn-sm btn-warning" %>
                  <%= button_to "Delete", admin_event_path(event), method: :delete, 
                      data: { confirm: "Are you sure you want to delete this event?" }, 
                      class: "btn btn-sm btn-danger" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-info">
      <h4>No Events Yet</h4>
      <p>Get started by adding your first event!</p>
      <%= link_to "Add Event", new_admin_event_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
