<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>ðŸŽ¯ Manage Promos</h1>
    <%= link_to "Add New Promo", new_admin_promo_path, class: "btn btn-primary" %>
  </div>

  <% if @promos.any? %>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>Title</th>
            <th>Discount</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @promos.each do |promo| %>
            <tr>
              <td><strong><%= promo.title %></strong></td>
              <td>
                <% if promo.discount_percentage.present? %>
                  <span class="badge bg-success"><%= promo.discount_percentage %>% OFF</span>
                <% else %>
                  <span class="text-muted">N/A</span>
                <% end %>
              </td>
              <td><%= promo.start_date.strftime("%b %d, %Y") %></td>
              <td><%= promo.end_date.strftime("%b %d, %Y") %></td>
              <td>
                <% if promo.active? %>
                  <span class="badge bg-success">Active</span>
                <% elsif promo.upcoming? %>
                  <span class="badge bg-info">Upcoming</span>
                <% else %>
                  <span class="badge bg-secondary">Expired</span>
                <% end %>
              </td>
              <td style="min-width: 140px;">
                <div class="d-flex gap-2">
                  <%= link_to "Edit", edit_admin_promo_path(promo), class: "btn btn-sm btn-warning" %>
                  <%= button_to "Delete", admin_promo_path(promo), method: :delete, 
                      data: { confirm: "Are you sure you want to delete this promo?" }, 
                      class: "btn btn-sm btn-danger" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-info">
      <h4>No Promos Yet</h4>
      <p>Get started by adding your first promotional offer!</p>
      <%= link_to "Add Promo", new_admin_promo_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
